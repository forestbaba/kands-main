<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <ListPreference
        android:defaultValue="Monospace"
        android:entries="@array/font_names"
        android:entryValues="@array/font_values"
        android:key="change_font"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/font_names" />


    <ListPreference
        android:defaultValue="Medium"
        android:entries="@array/font_size_names"
        android:entryValues="@array/font_size_values"
        android:key="example_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/font_title" />



    <ListPreference
        android:defaultValue="White"
        android:entries="@array/theme_names"
        android:entryValues="@array/theme_values"
        android:key="change_theme"
        android:title="@string/theme_title" />

</PreferenceScreen>